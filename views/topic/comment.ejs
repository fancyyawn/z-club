<div class="ui segment">
    <div class="ui comments">
        <h3 class="ui header">评论</h3>
        <div class="ui divider"></div>
        <% comments.forEach(function (comment) { %>
        <div class="comment">
            <a class="avatar" href="/topics/user/<%= comment.user.name %>">
                <img src="<%= gravatar.url(comment.user.email) %>">
            </a>
            <div class="content">
                <a class="author" href="/topics/user/<%= comment.user.name %>">
                    <%= comment.user.name %>
                </a>
                <div class="metadata">
            <span class="date">
              <%= moment(comment.updated_at).fromNow() %>
            </span>
                </div>
                <div class="text">
                    <%- comment.content  %>
                </div>
            </div>
        </div>
        <% }) %>

        <% if (session.user) { %>
        <form class="ui reply form" method="post" action="/topics/<%= topic._id%>/comment">
            <input type="hidden" name="topic_id" value="<%= topic._id %>">
            <div class="field">
                <textarea name="content"></textarea>
            </div>
            <input type="submit" class="ui button" value="留言">
        </form>
        <% } %>
    </div>
</div>